rules:
  - name: "README Updates Required"
    description: "Ensure README.md is reviewed and updated with all code changes"
    pattern: ".*\\.(js|ts|jsx|tsx|swift|kotlin|java)$"
    message: "Remember to update README.md to reflect your code changes"

  - name: "Offline-First Architecture"
    description: "Ensure network calls are only made when explicitly requested"
    pattern: ".*\\.(js|ts|jsx|tsx|swift|kotlin|java)$"
    message: "Network calls should only be made during explicit backup/restore operations"

  - name: "Local Storage Priority"
    description: "Ensure data persistence uses local storage"
    pattern: ".*\\.(js|ts|jsx|tsx|swift|kotlin|java)$"
    message: "Use local storage for data persistence unless explicitly handling backup"

  - name: "Cross-Platform Compatibility"
    description: "Ensure code is compatible with both iOS and Android"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Code must be tested on both iOS and Android platforms"

  - name: "Privacy Check"
    description: "Ensure no unnecessary data collection or transmission"
    pattern: ".*\\.(js|ts|jsx|tsx|swift|kotlin|java)$"
    message: "Verify that no unnecessary data collection or transmission is occurring"

  - name: "Component Documentation"
    description: "Ensure new components are documented"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Add documentation for new components in the appropriate section" 

  - name: "Data Encryption"
    description: "Ensure data is encrypted at rest"
    pattern: ".*\\.(js|ts|jsx|tsx|swift|kotlin|java)$"
    message: "Data must be encrypted at rest using secure encryption algorithms"

  - name: "Accessibility Requirements"
    description: "Ensure components meet accessibility standards"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Components must include appropriate accessibility attributes (e.g., aria-labels, role, etc.)"

  - name: "Performance Optimization"
    description: "Check for performance bottlenecks in component rendering"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Use React.memo, useMemo, or useCallback where appropriate to optimize performance"

  - name: "Error Handling"
    description: "Ensure proper error handling is implemented"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Add try/catch blocks and user-friendly error messages for critical operations"

  - name: "Responsive Design"
    description: "Ensure UI is responsive across different screen sizes"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Check that components adapt properly to different screen sizes and orientations"

  - name: "TypeScript Typing"
    description: "Ensure proper TypeScript types are used"
    pattern: ".*\\.(ts|tsx)$"
    message: "Avoid using 'any' type; define proper interfaces and types for all components and functions"

  - name: "Component Size Limit"
    description: "Keep components focused and manageable"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Consider breaking down components that exceed 200 lines into smaller, more focused components"

  - name: "Memory Management"
    description: "Prevent memory leaks in components"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Clean up subscriptions, timers, and event listeners in useEffect cleanup functions"

  - name: "Testing Requirements"
    description: "Ensure new features have appropriate tests"
    pattern: ".*\\.(js|ts|jsx|tsx)$"
    message: "Add unit tests for new components and integration tests for complex workflows"

